CXXFLAGS= -O0 -DDEBUG_BUILD 
#CXXFLAGS= -O3 -DNO_OUTPUT -DNO_STORAGE -Wall


ifdef DEBUG
ifeq (${DEBUG}, 0)
CXXFLAGS= -O3 -DNO_STORAGE -DNO_OUTPUT
endif
endif
ifdef PROFILE
CXXFLAGS = -pg
endif 

EXE_NAME=DRAMSim
LIB_NAME=libdramsim.so

SRC = $(wildcard *.cpp)
OBJ = $(addsuffix .o, $(basename $(SRC)))
POBJ = $(addsuffix .po, $(basename $(SRC)))
REBUILDABLES=$(OBJ) ${POBJ} $(EXE_NAME) $(LIB_NAME) 

all: ${EXE_NAME}

#   $@ target name, $^ target deps, $< matched pattern
$(EXE_NAME): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $^ 
	@echo "Built $@ successfully" 

${LIB_NAME}: ${POBJ}
	g++ -g -shared -Wl,-soname,$@ -o $@ $^
	@echo "Built $@ successfully"

#include the autogenerated dependency files for each .o file
-include $(OBJ:.o=.dep)
-include $(POBJ:.po=.dep)

# build dependency list via gcc -M and save to a .dep file
%.dep : %.cpp
	@$(CXX) -M $(CXXFLAGS) $< > $@

# build all .cpp files to .o files
%.o : %.cpp
	g++ $(CXXFLAGS) -o $@ -c $<

%.po : %.cpp
	g++ -O3 -ffast-math -fPIC -DNO_OUTPUT -DNO_STORAGE -o $@ -c $<
clean: 
	rm -f ${REBUILDABLES} *.dep ${MBOB_EXE}
